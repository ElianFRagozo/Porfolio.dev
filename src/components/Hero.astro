---
const personalImageAlt = "Miguel Ángel"
import Badge from "../components/Badge.astro"
import LinkedInIcon from "../components/icons/LinkedIn.astro"
import MailIcon from "../components/icons/Mail.astro"
import SocialPill from "../components/SocialPill.astro"
import GitHubIcon from "./icons/GitHub.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/elian foto.jpg"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/elian-enrique-fragozo-ruiz-a31084196/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, soy Elian Fragozo
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-yellow-200 [&>strong]:text-yellow-500 [&>strong]:font-semibold dark:text-gray-300"
  >
    Desarrollador de Software Junior. <strong
      >Ingeniero de Sistemas en Formacion</strong
    > Desarrollador Backend con experiencia en Node.js, .NET, Java (SpringBoot), SQL/NoSQL | Proactivo, enfocado en soluciones y creación de aplicaciones robustas y eficientes
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="https://wa.me/qr/BPFAIAV7DRBYK1">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/elian-enrique-fragozo-ruiz-a31084196/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://github.com/ElianFRagozo">
      <GitHubIcon class="size-4" />
      GitHub
    </SocialPill> 
  </nav>
</div>
